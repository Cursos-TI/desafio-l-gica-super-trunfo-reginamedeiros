#include <stdio.h>

int main () {

// Criando as variáveis das duas cartas

//Carta 1:
char estado1[3];
int codigo1;
char cidade1[50];
int populacao1;
int area1;
int PIB1;
int pontos_turisticos1;
// Carta 2:
char estado2[3];
int codigo2;
char cidade2[50];
int populacao2;
int area2;
int PIB2;
int pontos_turisticos2;

//Saudação e explicação das cartas:
printf("Bem vindo ao Super Trunfo!\n");
printf("Voce tem direito a cadastrar duas cartas.\n");
printf("Vamos começar cadastrando 1 carta!\n");
printf("Cada carta deve conter os seguintes dados:\n");
printf("Uma letra de 'A' a 'H', representando um dos oito estados\n");
printf("Numero inteiro de codigo da carta\n");
printf("O nome de 1 cidade\n");
printf("Quantidade populacional\n");
printf("Area em km²\n");
printf("PIB em numero inteiro\n");
printf("N° de pontos turisticos\n");

//Cadastro da primeira carta:
printf("\nDigite uma Letra de entre 'A' e 'H': ");
scanf("%2s", estado1);
printf("O estado e: %s\n", estado1);

printf("Digite um numero: ");
scanf("%d", &codigo1);
printf("O codigo e: %d\n", codigo1);

printf("Digite uma cidade: ");
scanf("%49s", cidade1);
printf("A cidade e: %s\n", cidade1);

printf("Digite a populacao da cidade: ");
scanf("%d", &populacao1);
printf("A populacao e: %d\n", populacao1);

printf("Digite a area da cidade: ");
scanf("%d", &area1);
printf("A area e: %d km²\n", area1);

printf("Digite o PIB: ");
scanf("%d", &PIB1);
printf("O PIB e: %d\n", PIB1);

printf("Digite o numero de pontos turisticos da cidade: ");
scanf("%d", &pontos_turisticos1);
printf("A quantidade de pontos turisticos e: %d\n", pontos_turisticos1);

//Impressão dos dados da primeira carta:
printf("Parabens! Voce escolheu sua primeira carta!\n");
printf("Carta 1: \n");
printf("Estado: %s\n", estado1);
printf("Codigo: %d\n", codigo1);
printf("Cidade: %s\n", cidade1);
printf("Populacao: %d\n", populacao1);
printf("Area: %d\n", area1);
printf("PIB: %d\n", PIB1);
printf("Numero de Pontos Turisticos: %d\n", pontos_turisticos1);

//Cadastro da segunda carta:
printf("Vamos a segunda carta!\n");
printf("Digite uma Letra de entre 'A' e 'H': \n");
scanf("%2s", estado2);
printf("O estado e: %s\n", estado2);

printf("Digite um numero: ");
scanf("%d", &codigo2);
printf("O codigo e: %d\n", codigo2);

printf("Digite uma cidade: ");
scanf("%49s", cidade2);
printf("A cidade e: %s\n", cidade2);

printf("Digite a populacao da cidade: ");
scanf("%d", &populacao2);
printf("A populacao e: %d\n", populacao2);

printf("Digite a area da cidade: ");
scanf("%d", &area2);
printf("A area e: %d km²\n", area2);

printf("Digite o PIB: ");
scanf("%d", &PIB2);
printf("O PIB e: %d\n", PIB2);

printf("Digite o numero de pontos turisticos da cidade: ");
scanf("%d", &pontos_turisticos2);
printf("A quantidade de pontos turisticos e: %d\n", pontos_turisticos2);

//Confirmação de cadastro das duas cartas:
printf("Perfeito! Voce cadastrou suas duas cartas!\n");

//Impressão das duas cartas cadastradas:
//Carta 1:
printf("Carta 1: \n");
printf("Estado: %s\n", estado1);
printf("Codigo: %d\n", codigo1);
printf("Cidade: %s\n", cidade1);
printf("Populacao: %d\n", populacao1);
printf("Area: %d\n", area1);
printf("PIB: %d\n", PIB1);
printf("Numero de Pontos Turisticos: %d\n", pontos_turisticos1);

//Carta 2:
printf("Carta 2: \n");
printf("Estado: %s\n", estado2);
printf("Codigo: %d\n", codigo2);
printf("Cidade: %s\n", cidade2);
printf("Populacao: %d\n", populacao2);
printf("Area: %d\n", area2);
printf("PIB: %d\n", PIB2);
printf("Numero de Pontos Turisticos: %d\n", pontos_turisticos2);

// Cálculos (com proteção contra divisão por zero)
float densidade1 = (area1 > 0) ? (float)populacao1 / (float)area1 : 0.0f;
float densidade2 = (area2 > 0) ? (float)populacao2 / (float)area2 : 0.0f;
float pib_per_capita1 = (populacao1 > 0) ? (float)PIB1 / (float)populacao1 : 0.0f;
float pib_per_capita2 = (populacao2 > 0) ? (float)PIB2 / (float)populacao2 : 0.0f;

int opcao1;
int opcao2;

/* variáveis de pontos */
int pontos1 = 0;
int pontos2 = 0;

printf("Escolha dois atributos das opcoes para comparar as cartas:\n");
printf("1 - Densidade Populacional\n");
printf("2 - PIB per capita\n");
printf("3 - Populacao\n");
printf("4 - Area\n");
printf("5 - PIB\n");
printf("Digite a primeira opcao desejada (1-5): ");
scanf("%d", &opcao1);
printf("Digite a segunda opcao desejada (1-5): ");
scanf("%d", &opcao2);

/* Primeiro switch (opcao1) */
switch (opcao1)
{
    case 1:
        printf("Densidade da carta 1: %.2f\n", densidade1);
        printf("Densidade da carta 2: %.2f\n", densidade2);
        if (densidade1 > densidade2) {
            printf("A carta 1 venceu!\n");
            pontos1++; /* soma ponto à carta 1 */
        } else if (densidade2 > densidade1) {
            printf("A carta 2 venceu!\n");
            pontos2++; /* soma ponto à carta 2 */
        } else {
            printf("Empate!\n");
        }
        break;

    case 2:
        printf("PIB Per Capita da carta 1: %.2f\n", pib_per_capita1);
        printf("PIB Per Capita da carta 2: %.2f\n", pib_per_capita2);
        if (pib_per_capita1 > pib_per_capita2) {
            printf("A carta 1 venceu!\n");
            pontos1++;
        } else if (pib_per_capita2 > pib_per_capita1) {
            printf("A carta 2 venceu!\n");
            pontos2++;
        } else {
            printf("Empate!\n");
        }
        break;

    case 3:
        printf("A populacao da carta 1: %d\n", populacao1);
        printf("A populacao da carta 2: %d\n", populacao2);
        if (populacao1 > populacao2) {
            printf("A carta 1 venceu!\n");
            pontos1++;
        } else if (populacao2 > populacao1) {
            printf("A carta 2 venceu!\n");
            pontos2++;
        } else {
            printf("Empate!\n");
        }
        break;

    case 4:
        printf("A area da carta 1: %d\n", area1);
        printf("A area da carta 2: %d\n", area2);
        if (area1 > area2) {
            printf("A carta 1 venceu!\n");
            pontos1++;
        } else if (area2 > area1) {
            printf("A carta 2 venceu!\n");
            pontos2++;
        } else {
            printf("Empate!\n");
        }
        break;

    case 5:
        printf("O PIB da carta 1: %d\n", PIB1);
        printf("O PIB da carta 2: %d\n", PIB2);
        if (PIB1 > PIB2) {
            printf("A carta 1 venceu!\n");
            pontos1++;
        } else if (PIB2 > PIB1) {
            printf("A carta 2 venceu!\n");
            pontos2++;
        } else {
            printf("Empate!\n");
        }
        break;

    default:
        printf("Opcao invalida!\n");
        break;
}

/* Segundo switch (opcao2) */
switch (opcao2)
{
    case 1:
        printf("Densidade da carta 1: %.2f\n", densidade1);
        printf("Densidade da carta 2: %.2f\n", densidade2);
        if (densidade1 > densidade2) {
            printf("A carta 1 venceu!\n");
            pontos1++;
        } else if (densidade2 > densidade1) {
            printf("A carta 2 venceu!\n");
            pontos2++;
        } else {
            printf("Empate!\n");
        }
        break;

    case 2:
        printf("PIB Per Capita da carta 1: %.2f\n", pib_per_capita1);
        printf("PIB Per Capita da carta 2: %.2f\n", pib_per_capita2);
        if (pib_per_capita1 > pib_per_capita2) {
            printf("A carta 1 venceu!\n");
            pontos1++;
        } else if (pib_per_capita2 > pib_per_capita1) {
            printf("A carta 2 venceu!\n");
            pontos2++;
        } else {
            printf("Empate!\n");
        }
        break;

    case 3:
        printf("A populacao da carta 1: %d\n", populacao1);
        printf("A populacao da carta 2: %d\n", populacao2);
        if (populacao1 > populacao2) {
            printf("A carta 1 venceu!\n");
            pontos1++;
        } else if (populacao2 > populacao1) {
            printf("A carta 2 venceu!\n");
            pontos2++;
        } else {
            printf("Empate!\n");
        }
        break;

    case 4:
        printf("A area da carta 1: %d\n", area1);
        printf("A area da carta 2: %d\n", area2);
        if (area1 > area2) {
            printf("A carta 1 venceu!\n");
            pontos1++;
        } else if (area2 > area1) {
            printf("A carta 2 venceu!\n");
            pontos2++;
        } else {
            printf("Empate!\n");
        }
        break;

    case 5:
        printf("O PIB da carta 1: %d\n", PIB1);
        printf("O PIB da carta 2: %d\n", PIB2);
        if (PIB1 > PIB2) {
            printf("A carta 1 venceu!\n");
            pontos1++;
        } else if (PIB2 > PIB1) {
            printf("A carta 2 venceu!\n");
            pontos2++;
        } else {
            printf("Empate!\n");
        }
        break;

    default:
        printf("Opcao invalida!\n");
        break;
}

/* Impressão do placar final */
printf("\n=== Placar Final ===\n");
printf("Carta 1: %d ponto(s)\n", pontos1);
printf("Carta 2: %d ponto(s)\n", pontos2);

if (pontos1 > pontos2) {
    printf("Vencedora geral: Carta 1!\n");
} else if (pontos2 > pontos1) {
    printf("Vencedora geral: Carta 2!\n");
} else {
    printf("Empate geral!\n");
}

return 0;

}
